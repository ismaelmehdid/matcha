# ====================
# DATABASE CONFIGURATION
# ====================

# PostgreSQL database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=matcha

# Database connection URL (used by backend)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/matcha

# Backend database connection details
DB_USER=postgres
DB_HOST=db
DB_NAME=matcha
DB_PASSWORD=your_secure_password_here
DB_PORT=5432


# ====================
# BACKEND CONFIGURATION
# ====================

# Backend server port
PORT=3000

# JWT token secrets (generate random strings for production)
# You can generate these with: openssl rand -hex 32
ACCESS_TOKEN_SECRET=your_random_access_token_secret_here_min_32_chars
REFRESH_TOKEN_SECRET=your_random_refresh_token_secret_here_min_32_chars


# ====================
# REDIS CONFIGURATION
# ====================

# Redis credentials for session management and token storage
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379


# ====================
# EMAIL CONFIGURATION
# ====================

# SendGrid API key for sending verification and password reset emails
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_SENDER_EMAIL=your_verified_sender@example.com


# ====================
# FRONTEND CONFIGURATION
# ====================

# Backend API URL (used by frontend to make requests)
VITE_API_URL=http://localhost:3000

# Frontend URL (used by backend for CORS and email links)
FRONTEND_URL=http://localhost:5173
